{
  "name": "lfvcodes/microbridge-php",
  "description": "PHP's lightweight microservice communicator",
  "type": "library",
  "version": "1.0.0",
  "license": "MIT",
  "minimum-stability": "stable",
  "prefer-stable": true,
  "authors": [
    {
      "name": "lfvcodes",
      "email": "velfcodes@gmail.com",
      "role": "Developer"
    }
  ],
  "autoload": {
    "psr-4": {
      "MicroBridge\\": "src/"
    }
  },
  "require": {
    "php": ">=7.1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.0|^8.0|^9.0",
    "squizlabs/php_codesniffer": "^3.5"
  },
  "scripts": {
    "test": "phpunit",
    "cs-check": "phpcs --standard=PSR12 src/",
    "cs-fix": "phpcbf --standard=PSR12 src/"
  },
  "config": {
    "sort-packages": true
  },
  "keywords": [
    "php",
    "microservices",
    "api",
    "library",
    "internal-api",
    "communication",
    "lightweight"
  ],
  "homepage": "https://github.com/lfvcodes/microbridge-php",
  "support": {
    "issues": "https://github.com/lfvcodes/microbridge-php/issues",
    "source": "https://github.com/lfvcodes/microbridge-php"
  }
}